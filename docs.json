{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Falconyte Docs",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "index",
              "backend/getting-started"
            ]
          },
          {
            "group": "Operations",
            "pages": [
              "backend/deployment",
              "backend/api-authentication",
              "backend/webhooks"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Contacts",
            "pages": [
              "api-reference/endpoint/contacts/upsert",
              "api-reference/endpoint/contacts/bulk-upsert",
              "api-reference/endpoint/contacts/bulk-unsubscribe",
              "api-reference/endpoint/contacts/unsubscribe",
              "api-reference/endpoint/contacts/unsubscribes"
            ]
          },
          {
            "group": "Events",
            "pages": [
              "api-reference/endpoint/events/ingest",
              "api-reference/endpoint/events/decisions",
              "api-reference/endpoint/events/show"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "api-reference/endpoint/webhooks/index",
              "api-reference/endpoint/webhooks/store",
              "api-reference/endpoint/webhooks/update",
              "api-reference/endpoint/webhooks/enable",
              "api-reference/endpoint/webhooks/disable",
              "api-reference/endpoint/webhooks/destroy",
              "api-reference/endpoint/webhooks/deliveries",
              "api-reference/endpoint/webhooks/simulate"
            ]
          },
          {
            "group": "System",
            "pages": [
              "api-reference/endpoint/system/ping"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://docs.falconyte.dev/",
          "icon": "book-open-cover"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@falconyte.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.falconyte.com/"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/falconyte",
      "github": "https://github.com/falconyte",
      "linkedin": "https://linkedin.com/company/falconyte"
    }
